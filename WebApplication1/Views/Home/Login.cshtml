@model Users
@{
    ViewData["Title"] = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 class="text-center">Đăng Nhập</h2>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="jumbotron" style="padding-left: 40%;background: #e2dfdf78">
            <form style="width: 220px;height: 200px;padding: 20px;" role="form" asp-action="Login" asp-controller="Home" method="post">
                <div class="form-group">
                    <label for="Email">Nhập Email</label>
                    <input type="email" name="Email" asp-for="Email" autocomplete="off" class="form-control input-sm" placeholder="Email Address">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password">Nhập Password</label>
                    <input type="password" name="Password" asp-for="Password" autocomplete="off" class="form-control input-sm" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <input type="submit" value="Đăng nhập" class="btn btn-info btn-block">
            </form>
        </div>
    </div>

</div>