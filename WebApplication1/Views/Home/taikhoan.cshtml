@using Microsoft.AspNetCore.Http
@model WebApplication1.Models.Users
@{
    ViewData["Title"] = "TaiKhoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{


    var Password = Context.Session.GetString("Password");
 
    var Id = Context.Session.GetInt32("Id");
    var Email = Context.Session.GetString("Email");
    var sdt = Context.Session.GetString("sdt");
    var ten = Context.Session.GetString("ten");
    var diachi = Context.Session.GetString("diachi");

}


<div class="row">
    <div class="span5">
        <h4 class="title"><span class="text"><strong>Thông tin</strong> cá nhân</span></h4>
        <form asp-controller="Home" asp-action="TaiKhoan">
            @*<input type="hidden" asp-for="@Id" />*@
            <fieldset>




                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Id" />
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" value="@Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    @*<input type="password" name="Password" asp-for="Password" autocomplete="off" class="form-control input-sm" placeholder="Password">*@
                    <input type="password" asp-for="Password" value="@Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" value="@ten" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Diachi" class="control-label"></label>
                    <input asp-for="Diachi" value="@diachi" class="form-control" />
                    <span asp-validation-for="Diachi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sdt" class="control-label"></label>
                    <input asp-for="Sdt" value="@sdt" class="form-control" />
                    <span asp-validation-for="Sdt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </fieldset>
        </form>
    </div>

</div>

