@model IEnumerable<WebApplication1.Models.Chitiethoadon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAD.cshtml";
}

<style>
    table th {
        background: #333333 !important;
        color: #fff;
        text-transform: uppercase;
    }
</style>


<div class="agile-tables">
    <div class="w3l-table-info">
        <h2 style="color:#333333;">Chi tiết đơn hàng</h2>
        <table id="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th> Tên sản phẩm</th>
                    <th> Hình ảnh</th>
                    <th>Giá</th>
                    <th>Số lượng</th>                   
                    <th>Thành tiền</th>
                    <th>Ngày tạo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MahdNavigation.Mahd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaspNavigation.Tensp)
                    </td>
                    <td>

                        <img style="width: 100px;height: 120px;" src="@item.MaspNavigation.Anhdaidien" alt="">
                    </td>
                    <td>
                        @String.Format("{0:N0}", item.Gia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Soluong)
                    </td>
                
                    <td>
                        @String.Format("{0:N0}", item.Thanhtien)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>



                </tr>
                }
            </tbody>
        </table>
    </div>

</div>

