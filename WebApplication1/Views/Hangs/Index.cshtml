@model IEnumerable<WebApplication1.Models.Hang>

@{
    ViewData["Title"] = "NhaSanXuatAD";
    Layout = "~/Views/Shared/_LayoutAD.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <i class="fa fa-plus" aria-hidden="true"></i><a asp-action="Create">Thêm nhà sản xuất</a>
    </p>
    <style>
        table th {
            background: #333333 !important;
            color: #fff;
            text-transform: uppercase;
        }
    </style>


    <div class="agile-tables">
        <div class="w3l-table-info">
            <h2 style="color:#333333;">Danh sách nhà sản xuất</h2>
            <table id="table">
                <thead>
                    <tr>
                        <th>#ID</th>
                        <th> Tên nhà sản xuất</th>                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mahang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tenhang)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Mahang"><i class="fa fa-pencil" aria-hidden="true"></i></a> 
                                <a asp-action="Delete" asp-route-id="@item.Mahang"><i class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
   
</body>
</html>
